<root>

    <site  name="chrisgerken.github.io">

        <page  name="faces"  title="Faces">


            <goal>Watch the faces fill at different speeds.</goal>

        </page>

        <page  name="rushHour"  title="Rush Hour">

            <goal>Observe how traffic lights and different marble speeds result in temporary traffic jams</goal>
            <goal>Re-enable generators to increase congestion and use manual switches to selectively dispose of marbles.</goal>

            <generator  label="Slow Marbles"      color="000088"  id="gen_blue" />
            <generator  label="Regular Marbles"   color="888800"  id="gen_yellow" />
            <generator  label="Fast Marbles"      color="008800"  id="gen_green" />

            <switch  label="Dispose Blue"  id="disp_blue"  >
                <track  label="Keep"     index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>
            <switch  label="Dispose Yellow"  id="disp_yellow"  >
                <track  label="Keep"     index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>
            <switch  label="Dispose Green"  id="disp_green"  >
                <track  label="Keep"     index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>

        </page>

        <page  name="transforms"  title="Transforms">


            <goal>Observe how painters, color-based switches and random switches move the marbles through the process.</goal>
            <goal>Re-enable the generator to add more marbles and use the manual switch to get rid of marbles.</goal>

            <generator  label="Originals"      color="000088"  id="gen_blue" />
  
            <switch  label="Overflow"  id="disp"  >
                <track  label="Keep"     index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>

        </page>

        <page  name="layers01"  title="Layers 01">


            <goal>Watch the top layer disperse the marbles and the bottom layer gather them.</goal>

            <generator  label="Cyan Marbles"   color="008888"  id="gen_cyan" />

        </page>

        <page  name="layers02"  title="Layers 02">


            <goal>Watch the top layer disperse the marbles and the bottom layer gather them.</goal>

            <generator  label="Cyan Marbles"   color="008888"  id="gen_cyan" />

        </page>

        <page  name="nested"  title="Nested">


            <goal>Just watch.</goal>

            <generator  label="Cyan Marbles"   color="008888"  id="gen_cyan" />
  
            <switch  label="02"  id="man02"  >
                <track  label="In"  index="1"  id="1" />
                <track  label="Out" index="0"  id="0" />
            </switch>
            <switch  label="04"  id="man04"  >
                <track  label="In"  index="1"  id="1" />
                <track  label="Out" index="0"  id="0" />
            </switch>
            <switch  label="05"  id="man05"  >
                <track  label="In"  index="0"  id="0" />
                <track  label="Out" index="1"  id="1" />
            </switch>
            <switch  label="06"  id="man06"  >
                <track  label="In"  index="1"  id="1" />
                <track  label="Out" index="0"  id="0" />
            </switch>
            <switch  label="07"  id="man07"  >
                <track  label="In"  index="0"  id="0" />
                <track  label="Out" index="1"  id="1" />
            </switch>
            <switch  label="08"  id="man08"  >
                <track  label="In"  index="1"  id="1" />
                <track  label="Out" index="0"  id="0" />
            </switch>

        </page>




        <page  name="ribbons"  title="Ribbons">


            <goal>Stop the generator or dispose of marbles when there are too many of the same color.</goal>

           <generator  label="Red Marbles"    color="880000"  id="gen_red" />
            <generator  label="Yellow Marbles" color="888800"  id="gen_yellow" />
            <generator  label="Purple Marbles" color="880088"  id="gen_purple" />
            <generator  label="Cyan Marbles"   color="008888"  id="gen_cyan" />

            <!--  label :  -->
            <!--  id :  -->
            <!--  desc :  -->
            <switch  label="Red Switch"  id="disp_red"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>
            <switch  label="Yellow Switch"  id="disp_yellow"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>
            <switch  label="Purple Switch"  id="disp_purple"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>
            <switch  label="Cyan Switch"  id="disp_cyan"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Dispose"  index="1"  id="1" />
            </switch>


        </page>



        <page  name="test"  title="First Interactive">


            <goal>Fill every section of track with marbles, then clear the layout of all marbles.</goal>

            <generator  label="Red Marbles"    color="880000"  id="gen01" />

            <!--  label :  -->
            <!--  id :  -->
            <!--  desc :  -->
            <switch  label="Switch 01"  id="man01"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Left"  index="1"  id="1" />
                <track  label="Right"  index="2"  id="2" />
            </switch>
            <switch  label="Switch 02"  id="man02"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Left"  index="1"  id="1" />
            </switch>
            <switch  label="Switch 03"  id="man03"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Right"  index="1"  id="1" />
            </switch>
            <switch  label="Switch 04"  id="man04"  >
                <track  label="Straight" index="0"  id="0" />
                <track  label="Right"  index="1"  id="1" />
            </switch>


        </page>


    </site>


</root>
